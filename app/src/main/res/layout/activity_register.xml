<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="414dp"
        android:layout_height="605dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/color_useBlue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="170dp"
                android:text="注册"
                android:textColor="@color/color_write"
                android:textSize="35dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <EditText
            android:id="@+id/register_user"
            android:layout_width="359dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:background="@color/color_grey"
            android:hint="用户名/邮箱"

            />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="359dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
            android:background="@color/color_grey"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/register_phoneNumber"
            android:layout_width="359dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="240dp"
            android:background="@color/color_grey"
            android:ems="10"
            android:hint="手机号" />

        <EditText
            android:id="@+id/register_shenfenzheng"
            android:layout_width="359dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="300dp"
            android:background="@color/color_grey"
            android:ems="10"
            android:hint="身份证号" />

        <EditText
            android:id="@+id/register_dizhi"
            android:layout_width="359dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="360dp"
            android:background="@color/color_grey"
            android:ems="10"
            android:hint="地址" />

        <EditText
            android:id="@+id/register_age"
            android:layout_width="105dp"
            android:layout_height="36dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="420dp"
            android:background="@color/color_grey"
            android:ems="10"
            android:hint="年龄" />

        <RadioButton
            android:id="@+id/sexB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="420dp"
            android:text="男" />

        <RadioButton
            android:id="@+id/seXG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="420dp"
            android:text="女" />

        <Button
            android:id="@+id/button_DoRegister"
            android:layout_width="359dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="480dp"
            android:background="@color/color_useBlue"
            android:text="注册账号"
            android:textColor="@color/color_write"
            android:textSize="25dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>