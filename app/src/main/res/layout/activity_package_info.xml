<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PackageInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1E90FF">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包裹信息"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/yang"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/yangwanou"
            android:layout_marginLeft="25dp" />
        <TextView
            android:id="@+id/package_name"
            android:text="商品名在这里"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/yang"
            android:textSize="18dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/package_price"
            android:text="价格在这里"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/yang"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp" />
        <TextView

            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/package_price"
            android:textSize="17dp"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#DCDCDC">

        <TextView
            android:id="@+id/dingdanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:text="订单号："
            android:textColor="#000000"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/package_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dingdanhao"
            android:text="这里是订单号内容"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/shou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_shou" />

        <TextView
            android:id="@+id/pac_info_rec_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收件地址："
            android:layout_toRightOf="@+id/shou"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/shou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_ji" />

        <TextView
            android:id="@+id/pac_info_snd_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="寄件地址："
            android:layout_toRightOf="@+id/shou"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/shou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/youjiantou" />

        <TextView
            android:id="@+id/pac_info_now_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前地址："
            android:layout_toRightOf="@+id/shou"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/shou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/youjiantou" />

        <TextView
            android:id="@+id/pac_info_sign_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="签收状态："
            android:layout_toRightOf="@+id/shou"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <Button
            android:id="@+id/btn_receive_confirm"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edge_shape"
            android:text="签收"
            android:textSize="17dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_back_to_package_list"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/edge_shape"
            android:text="返回"
            android:textSize="17dp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>



</LinearLayout>