<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">
    <Button
        android:id="@+id/btn_home2"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/zuojiantou"
        android:layout_marginTop="6dp"
        android:clickable="false" />
    <TextView
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:text="问题反馈"
        android:textColor="#FFFFFF"
        android:background="#2697F4"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/btn_home1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:text="功能异常"
        android:gravity="center_vertical|left"
        android:layout_below="@id/btn_home"
        android:textSize="20dp"/>
    <ToggleButton
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_below="@id/btn_home"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/btn_home3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:text="其他问题"
        android:gravity="center_vertical|left"
        android:layout_below="@id/btn_home1"
        android:textSize="20dp"/>
    <ToggleButton
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_below="@id/btn_home1"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/btn_home4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:text="问题和意见"
        android:gravity="center_vertical|left"
        android:layout_below="@id/btn_home3"
        android:textSize="12dp"/>
    <EditText
        android:id="@+id/btn_home5"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/edit_bg"
        android:layout_below="@id/btn_home4"/>
    <Button
        android:id="@+id/btn_wtfktj"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_home5"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="#2697F4"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="17dp"/>



</RelativeLayout>
