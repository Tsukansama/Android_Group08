<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/list_view_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@mipmap/yangwanou" />

    <TextView
        android:id="@+id/list_view_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/list_view_icon"
        android:text="我是标题"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/list_view_title1"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/list_view_icon"
        android:text="我是内容"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/list_view_title2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginLeft="200dp"
        android:layout_toRightOf="@id/list_view_icon"
        android:text="点击查询"
        android:textColor="@color/color_useBlue"
        android:gravity="right|bottom"
        android:textSize="15dp" />
    <ImageView
        android:id="@+id/shouye_xian_3"
        android:layout_width="406dp"
        android:layout_height="1dp"
        android:layout_below="@id/list_view_icon"
        android:background="@color/color_useBlue" />
</RelativeLayout>