<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MeCellButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingHorizontal">25dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">#959595</item>
        <item name="android:background">@drawable/ripple_bg</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MyInfoTextView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">17sp</item>
        <item name="background">@drawable/ripple_bg</item>
    </style>

    <style name="MyInfoEditText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">17sp</item>
        <item name="android:clickable">false</item>
    </style>

</resources>
